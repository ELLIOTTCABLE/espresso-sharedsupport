<?xml version="1.0" encoding="UTF-8"?>

<settings>
	
	<language id="espresso.default.SGML" hidden="true">
		
		<!-- The root zone name for this language. This can be defined in one of the syntax definitions under Syntaxes, or in another bundle. -->
		<root-zone>com.macrabbit.Espresso.Syntax.Declarative.SGML</root-zone>
		
		<!-- The name of the language as presented to the user -->
		<name>SGML</name>
		
		<!-- Ways to detect if a certain file is in this language -->
		<detectors>
			<extension>sgml</extension>
			<match-content lines="2"><![CDATA[<!DOCTYPE]]></match-content>
		</detectors>
		
	</language>
	
	<language id="espresso.default.HTML">
		
		<!-- The root zone name for this language. This can be defined in one of the syntax definitions under Syntaxes, or in another bundle. -->
		<root-zone>text.html.basic</root-zone>
		
		<!-- The name of the language as presented to the user -->
		<name>HTML</name>
		
		<!-- Ways to detect if a certain file is in this language -->
		<detectors>
			<extension>html</extension>
			<extension>htm</extension>
			<extension>xhtml</extension>
			<extension>xhtm</extension>
			<extension>shtml</extension>
			<extension>shtm</extension>
			<match-content lines="2"><![CDATA[(?i)<!DOCTYPE html PUBLIC]]></match-content>
			<match-content lines="1"><![CDATA[(?i)<html]]></match-content>
		</detectors>
		
	</language>
	
	<language id="espresso.default.XML">
		
		<root-zone>text.xml</root-zone>
		<name>XML</name>
		<detectors>
			<extension>xml</extension>
			<match-content><![CDATA[<\?xml]]></match-content>
		</detectors>
		
	</language>

	<language id="espresso.default.XSL">
		
		<root-zone>text.xml.xsl</root-zone>
		<name>XSL</name>
		<detectors>
			<extension>xslt</extension>
			<extension>xsl</extension>
		</detectors>
		
	</language>
	
</settings>
